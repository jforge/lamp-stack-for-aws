{
  "builders": [{
    "name": "webserver",
    "type": "amazon-ebs",
    "region": "{{user `region`}}",
    "instance_type": "t2.nano",
    "ami_name": "{{build_name}}-{{user `build_version`}}",
    "ssh_username": "ubuntu",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "*ubuntu-trusty-14.04-amd64-server-*",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    }
  }],
  "provisioners": [{
      "type": "chef-solo",
      "version": "12.22.5",
      "cookbook_paths": ["cookbooks"],
      "run_list": [
        "apt",
        "apache2",
        "apache2::mod_php5",
        "php",
        "php::module_mysql",
        "lamp-stack-for-aws-cookbook"
      ]
    }]
}
